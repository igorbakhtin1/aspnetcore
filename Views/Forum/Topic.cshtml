@model IgorForum.Models.Forum.ForumTopicModel

<h1>Приветствуем Вас на @Model.Forum.Name Форуме!</h1>

@if (Model.Posts.Any())
{
    <table>
        <tbody class="table table-bordered table-hover" >
            @foreach (var post in Model.Posts)
            {
            <tr>
                <td>
                    <a asp-controller="Post" asp-action="Index" asp-route-id="@post.Id">
                        @post.Title
                    </a>
                </td>
                <td>
                    @post.AuthorName
                </td>
                <td>
                    @post.DatePosted
                </td>
                <td>
                    @post.RepliesCount
                </td>
            </tr>
            }
        </tbody>
    </table>
}

else
{
    <div class="noPosts">
        <h3>
            К сожалению, пока на @Model.Forum.Name  нет записей! <br />
            Почему бы не
            <a asp-controller="Post" asp-action="Create" asp-route-id="@Model.Forum.Id">
                <span>создать</span>
            </a>
        </h3>
    </div>
}

