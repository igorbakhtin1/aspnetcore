@model  IgorForum.Models.Home.HomeIndexModel

<div class="container body-content">
    <div class="row frontPageSplash">
        <div class="col-md-6 frontPageLearn">
            <div class="frontPageHeading">Учись, Общайся, Развивайся</div>
            <p class="frontPageSubHeading">IgorForum помогает людям обсуждать проблемы</p>
            <div>
                <form asp-controller="Search" asp-action="Search" method="post">
                    <input asp-for="SearchQuery" type="text" class="homeSearch" placeholder="Поиск записей..."/>
                </form>
            </div>
        </div>
        <div class="col-md-6"></div>
    </div>
    <div class="row frontPageContent">
        <h3 id="latestPosts">Последние записи</h3>
        <table class="table table-hover" id="latestPostsTable">
            <tbody>
                @foreach(var post in Model.LatestPosts)
                {
                    <tr>
                        <td>
                            <div class="forumLogo" style="background-image: url(@post.Forum.ImageUrl);"></div>
                            <div class="postTitle">
                                <a asp-controller="Post" asp-action="Index" asp-route-id="@post.Id">
                                    @post.Title
                                </a>
                            </div>
                            <div class="postSubTitle">
                                @if (post.RepliesCount == 1)
                                {
                                    <span>@post.RepliesCount Ответов</span>
                                }
                                @if (post.RepliesCount == 0)
                                {
                                    <span>Нет ответов</span>
                                }
                                else
                                {
                                    <span>@post.RepliesCount Ответов</span>
                                }
                                <span class="postUser">
                                <a asp-controller="Profile" asp-action="Detail" asp-route-id="@post.AuthorId">
                                    @post.AuthorName
                                    </a>
                                </span>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>